<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">



    <ImageView
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:id="@+id/upsellPlaceholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_add_upsell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/sc_sportwom" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"
        android:textColor="@color/back"
        android:padding="10dp"
        android:background="@drawable/ui_grad_yellow_r0_a0"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="EUR 10.99"/>

    <TextView
        android:id="@+id/price_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:textSize="40sp"
        android:textColor="@color/product_grey"
        android:padding="10dp"
        android:layout_marginEnd="10dp"
        android:text="EUR 20.99"/>

    <View
        android:layout_width="180dp"
        android:layout_height="3dp"
        app:layout_constraintEnd_toEndOf="@+id/price_old"
        app:layout_constraintStart_toStartOf="@id/price_old"
        app:layout_constraintTop_toTopOf="@id/price_old"
        app:layout_constraintBottom_toBottomOf="@+id/price_old"
        android:background="@color/product_grey" />

    <Button
        android:id="@+id/button_back_upsell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ui_white_r30"
        android:backgroundTint="@color/light_gray"
        android:drawableStart="@drawable/ic_back"
        android:padding="10dp"
        android:textAllCaps="false"
        android:paddingEnd="20dp"
        android:paddingStart="10dp"
        android:text="@string/back"
        android:textColor="@color/dark_gray"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_add_upsell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableEnd="@drawable/ic_forward_white"
        android:background="@drawable/ui_grad_blue_r30_a0"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="@string/add"
        android:textSize="30sp"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_skip_upsell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ui_white_r30"
        android:backgroundTint="@color/light_gray"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="@string/skip"
        android:textColor="@color/dark_gray"
        android:textSize="30sp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_back_upsell" />


</android.support.constraint.ConstraintLayout>